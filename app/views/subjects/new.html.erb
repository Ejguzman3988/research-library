<h1>Create a New Subject</h1>

<%= form_for @subject, url: '/subjects' do |f| %>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <br>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
    <br>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :research_id, :value => params[:id].research_id %>
    <%= f.submit %>
<% end %>